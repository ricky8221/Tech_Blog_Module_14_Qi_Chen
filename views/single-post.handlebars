<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between bg-primary">
      <h2 class="text-white">{{post.title}}</h2>
      <div>
        Posted by {{post.User.user_name}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
      <a class="list-item flex-row justify-space-between" href="/dashboard/edit/{{post.id}}">Edit</a>
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header bg-primary">
        <h3 class="text-white">Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.user_name}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header bg-primary">
      <h3 class="text-white">Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>