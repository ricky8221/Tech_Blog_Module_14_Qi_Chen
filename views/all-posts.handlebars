
<div class="posts">
  {{#each post}}
  <article class="card">
    <div class="card-header flex-row justify-space-between bg-primary">
      <h2>
        <a href="/post/{{id}}" class="text-white">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.user_name}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>